<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:id="@+id/llay_twopane_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/fr_movie_catalog"
        android:name="com.mustafakahraman.popularmovies1.ui.MoviesCatalogFragment"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="match_parent" />

    <fragment
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/fr_movie_detail"
        android:name="com.mustafakahraman.popularmovies1.ui.MovieDetailFragment"
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_height="match_parent" />

</LinearLayout>